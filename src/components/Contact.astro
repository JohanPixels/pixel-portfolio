<style>
    @keyframes bounce {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    .animate-bounce {
        animation: bounce 1s infinite;
    }

    /* Only show hint in pixel mode */
    .theme-pixel .pixel-hint {
        display: block;
    }
</style>

<script>
    // Konami Code Easter Egg
    const konamiCode = [
        "ArrowUp",
        "ArrowUp",
        "ArrowDown",
        "ArrowDown",
        "ArrowLeft",
        "ArrowRight",
        "ArrowLeft",
        "ArrowRight",
        "b",
        "a",
    ];
    let konamiIndex = 0;

    document.addEventListener("keydown", (e) => {
        const key = e.key.toLowerCase();

        if (
            key === konamiCode[konamiIndex].toLowerCase() ||
            e.key === konamiCode[konamiIndex]
        ) {
            konamiIndex++;

            if (konamiIndex === konamiCode.length) {
                // Easter egg activated!
                const easterEgg = document.getElementById("easter-egg");
                if (easterEgg) {
                    easterEgg.classList.remove("hidden");
                    easterEgg.scrollIntoView({
                        behavior: "smooth",
                        block: "center",
                    });
                }
                konamiIndex = 0;
            }
        } else {
            konamiIndex = 0;
        }
    });
</script>
