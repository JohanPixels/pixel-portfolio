<section id="more-projects" class="py-24 px-6" style="background-color: var(--surface);">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="mb-12 text-center">
      <h2 class="theme-professional:text-5xl theme-pixel:text-3xl font-bold mb-4">
        M√°s Proyectos
      </h2>
      <p class="theme-professional:text-lg theme-pixel:text-xs max-w-2xl mx-auto mb-4" style="color: var(--secondary);">
        Otros proyectos en los que he trabajado o estoy trabajando
      </p>
      <div class="w-20 h-1 mx-auto" style="background-color: var(--accent);"></div>
    </div>

    <!-- Filters -->
    <div class="flex flex-wrap gap-3 justify-center mb-12">
      <button data-filter="all" class="filter-btn active px-6 py-2 rounded-lg font-medium transition-all hover:scale-105 theme-professional:text-sm theme-pixel:text-xs">
        All
      </button>
