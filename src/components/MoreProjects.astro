      </button>
      <button data-filter="Data" class="filter-btn px-6 py-2 rounded-lg font-medium transition-all hover:scale-105 theme-professional:text-sm theme-pixel:text-xs">
        Data
      </button>
      <button data-filter="Automation" class="filter-btn px-6 py-2 rounded-lg font-medium transition-all hover:scale-105 theme-professional:text-sm theme-pixel:text-xs">
        Automation
      </button>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="projects-grid">
      {projects.map((project) => (
        <article
          class="project-card p-6 rounded-lg border-2 hover:scale-105 transition-all duration-300"
          data-tags={project.tags.join(',')}
          style="background-color: var(--bg); border-color: var(--border);"
        >
          <!-- Icon & Status -->
          <div class="flex justify-between items-start mb-4">
            <span class="text-4xl">{project.icon}</span>
            <span class="px-2 py-1 rounded-full theme-professional:text-xs theme-pixel:text-[10px]" style="background-color: var(--surface); color: var(--secondary);">
              {project.status}
            </span>
          </div>

          <!-- Title & Description -->
          <h3 class="theme-professional:text-xl theme-pixel:text-sm font-bold mb-2">
            {project.title}
          </h3>
          <p class="theme-professional:text-sm theme-pixel:text-xs mb-4" style="color: var(--secondary);">
            {project.description}
          </p>

          <!-- Tech Stack -->
          <div class="flex flex-wrap gap-2 mb-4">
            {project.tech.map((tech) => (
              <span class="px-2 py-1 rounded theme-professional:text-xs theme-pixel:text-[10px]" style="background-color: var(--surface); color: var(--text);">
                {tech}
              </span>
            ))}
          </div>

          <!-- Tags -->
          <div class="flex flex-wrap gap-2">
            {project.tags.map((tag) => (
              <span class="px-2 py-1 rounded-full theme-professional:text-xs theme-pixel:text-[10px] font-medium" style="border: 1px solid var(--accent); color: var(--accent);">
                {tag}
              </span>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .filter-btn {
    background-color: var(--bg);
    border: 2px solid var(--border);
    color: var(--text);
  }

  .filter-btn.active {
    background-color: var(--accent);
    color: var(--bg);
    border-color: var(--accent);
  }

  .project-card {
    opacity: 1;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .project-card.hidden {
    display: none;
  }
</style>

<script>
  // Filter functionality
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const projectCards = document.querySelectorAll('.project-card');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const filter = btn.getAttribute('data-filter') as string;

        // Update active button
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        // Filter projects
        projectCards.forEach(card => {
          const tags = card.getAttribute('data-tags')?.split(',') || [];

          if (filter === 'all' || tags.includes(filter)) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
      });
    });
  });
</script>
